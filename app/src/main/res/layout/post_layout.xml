<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/cardview_default_margin">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/postImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:src="@drawable/common_full_open_on_phone"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/postTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="@dimen/post_title_textView_padding"
            android:text="Post Title"
            android:textAppearance="?android:textAppearanceLarge"/>

        <TextView
            android:id="@+id/postDescTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/post_title_textView_padding"
            android:text="this is the post description "
            android:textAppearance="?android:textAppearanceMedium"/>

        <TextView
            android:id="@+id/postDateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/post_title_textView_padding"
            android:text="created at 2:27PM 19/6/2018"
            android:textAppearance="?android:textAppearanceSmall"/>

    </LinearLayout>
</android.support.v7.widget.CardView>